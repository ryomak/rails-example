<div class="container">
  <%= form_with id: "search-form", local: false do |form| %>
    <div class="input-group">
      <%= form.text_field :text, placeholder: "テキストを入力 &#129302;".html_safe, class: "search-input" %>
      <span class="search-btn">
        <%= form.submit "検索" %>
      </span>
    </div>
  <% end %>

  <div class="results">
    <div class="result-card">
      <h3><span class="emoji">&#128736;</span> Normal RAG</h3>
      <div id="search-no1" class="search-results"></div>
    </div>
    <div class="result-card">
      <h3><span class="emoji">&#128736;</span> Custom RAG</h3>
      <div id="search-no2" class="search-results"></div>
    </div>
  </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        const form = document.getElementById("search-form");
        const searchResults = document.querySelectorAll(".search-results");

        form.addEventListener("submit", function(e) {
            e.preventDefault();
            const formData = new FormData(form);

            // ロボットアイコンのアニメーションを表示
            searchResults.forEach(function(result) {
                result.innerHTML = '<div class="loading-animation"><i class="fa fa-robot fa-spin"></i></div>';
            });

            fetch("<%= @api1_path %>", {
                method: 'POST',
                body: formData,
            })
              .then(response => response.json())
              .then(data => {
                  searchResults[0].innerHTML = `<p>${data.message}</p>`;
              })
              .catch(error => console.error('Error:', error));

            fetch("<%= @api2_path %>", {
                method: 'POST',
                body: formData,
            })
              .then(response => response.json())
              .then(data => {
                  searchResults[1].innerHTML = `<p>${data.message}</p>`;
              })
              .catch(error => console.error('Error:', error));

        });
    });
</script>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap');

    * {
        box-sizing: border-box;
        font-family: sans-serif;
    }

    body {
        background-color: #2c2c2c;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        margin: 0;
    }

    .container {
        width: 1000px;
        padding: 40px;
        background-color: #444444;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
    }

    .input-group {
        display: flex;
        align-items: center;
        margin-bottom: 40px;
    }

    .search-input {
        flex-grow: 1;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        background-color: #333333;
        color: #ffffff;
        font-size: 16px;
        transition: box-shadow 0.3s ease;
    }

    .search-input:focus {
        outline: none;
        box-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
    }

    .search-btn {
        margin-left: 20px;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        background-color: #333333;
        color: #ffffff;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Press Start 2P', cursive;
    }
    input[type="submit"] {
        background: #333333;
        color: #ffffff;
        border: none;
        cursor: pointer;
    }

    .results {
        display: flex;
        justify-content: space-between;
        gap: 40px;
    }

    .result-card {
        width: 500px;
        padding: 20px;
        border-radius: 10px;
        background-color: #333333;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    }

    h3 {
        margin-top: 0;
        display: flex;
        align-items: center;
        color: #00cc00;
        text-shadow: 0 0 10px rgba(0, 255, 0, 0.5);
        font-family: 'Press Start 2P', cursive;
    }

    .emoji {
        margin-right: 10px;
    }

    .search-results {
        color: #ffffff;
        height: 450px;
        overflow-y: auto;
        scrollbar-width: none;
    }

    .search-results::-webkit-scrollbar {
        display: none;
    }

    .loading-animation {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
        font-size: 24px;
        color: #00cc00;
        text-shadow: 0 0 10px rgba(0, 255, 0, 0.5);
    }

    .fa-robot {
        animation: rotate 2s infinite linear;
    }

    @keyframes rotate {
        from {
            transform: rotate(0deg);
        }
        to {
            transform: rotate(360deg);
        }
    }
</style>