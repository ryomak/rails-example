<div class="container">
<%= form_with id: "search-form", local: false do |form| %>
  <%= form.label :text, "テキスト" %>
  <%= form.text_field :text %>

  <%= form.label :image_url, "画像URL" %>
  <%= form.text_field :image_url %>

  <%= form.submit "検索" %>
<% end %>
  <div class="results">
    <div>
      <h3>デフォルト</h3>
      <div id="search-no1" class="search-results"></div>
    </div>
    <div>
      <h3>LangChain</h3>
      <div id="search-no2" class="search-results"></div>
    </div>
    <div>
      <h3>LangChain</h3>
      <div id="search-no3" class="search-results"></div>
    </div>
  </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        const form = document.getElementById("search-form");
        form.addEventListener("submit", function(e) {
            e.preventDefault();
            const formData = new FormData(form);
            const searchNoOne = document.getElementById("search-no1");
            const searchNoTwo = document.getElementById("search-no2");
            const searchNoThree = document.getElementById("search-no3");

            Promise.all([
                fetch("<%= @api1_path %>", {
                    method: 'POST',
                    body: formData,
                }),
                fetch("<%= @api2_path %>", {
                    method: 'POST',
                    body: formData,
                }),
                fetch("<%= @api3_path %>", {
                    method: 'POST',
                    body: formData,
                })
            ])
              .then(responses => Promise.all(responses.map(response => response.json())))
              .then(data => {
                  searchNoOne.innerHTML = `<p>${data[0].message}</p>`;
                  searchNoTwo.innerHTML = `<p>${data[1].message}</p>`;
                  searchNoThree.innerHTML = `<p>${data[2].message}</p>`;
              })
              .catch(error => console.error('Error:', error));
        });
    });
</script>

<style>
    form {
        padding: 20px;
        box-sizing: border-box;
        background-color: #eeffee;
        width: 100%;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    label {
        display: block;
        margin-bottom: 10px;
        color: #333;
        font-weight: bold;
    }

    input[type="text"] {
        width: 100%;
        padding: 10px;
        border: 1px solid #eee;
        border-radius: 4px;
        box-sizing: border-box;
        margin-bottom: 20px;
    }

    input[type="submit"] {
        background-color: #4CAF50;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
    }

    input[type="submit"]:hover {
        background-color: #45a049;
    }

    .container {
        width: 800px;
        margin: 20px auto;
    }
    .results {
        display: flex;
        gap: 20px;
        margin: 20px auto;
        justify-content: space-between;
    }
    .search-results  {
        padding: 20px;
        width: 250px;
        min-height: 300px;
        background-color: #eeffee;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }
</style>